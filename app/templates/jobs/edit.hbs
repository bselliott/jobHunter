<div class="ui form">

  <div class="eight wide field">
    <h2 class="ui block header">{{model.jobTitle}}</h2>
  </div>
  <form {{action "updateJob" on="submit"}}>
   <div class="five wide field">
    <strong>Job type:</strong>{{input type="text" vlaue=model.jobType}}
  </div>
  <div class="five wide field">
    <strong>Job title</strong>{{input type="text" value =model.jobTitle}}
  </div>
  <div class="eight wide field">
    <strong>Company name:</strong>{{input type="text" value = model.companyName}}
  </div>
  <div class="eight wide field">
    <strong>Company address:</strong>{{input type="text" value=model.companyAddress}}
  </div>
  <div class="five wide field">
    <strong>Job description:</strong>{{input type="text" value=model.jobDescription}}
  </div>
  <div>
    <button class="ui button" type="submit">Update</button>
    <button class="ui button" onclick={{action "deleteJob"}}>Delete</button>
  </div>
</form>
</div>
