<form class="ui form" {{action "createPerson" on="submit"}}>

  <div class="five wide field">
    <strong>First Name:</strong>{{input type="text" value=model.firstName}}
  </div>
  <div class="five wide field">
    <strong>Last Name:</strong>{{input type="text" value=model.lastName}}
  </div>
  <div class="eight wide field">
    <strong>Address:</strong>{{input type="text" value= model.address}}
  </div>
  <div class="eight wide field">
    <strong>Job:</strong>{{drop-down  model=model  jobs=jobs}}
  </div>
  <div>
    <button class="ui button" type="submit">Create</button>
  </div>
</form>
